{
    "manifest_version": 2,
    "name": "Jira Standup Monitor",
    "description": "Ramondly decides who's next on standups",
    "version": "1.2",
  
    "browser_action": {
      "default_icon": "ramondly.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://dev-jira.dynatrace.org/secure/RapidBoard.jspa"],
        "js": ["main.js"],
        "css": ["main.css"]
      }
    ],
    "web_accessible_resources": [
      "main.css",
      "images/gold.png",
      "images/silver.png",
      "images/copper.png",
      "highlights.css"
    ],
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ]
  }